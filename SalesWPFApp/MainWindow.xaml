<Window x:Class="SalesWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="CornflowerBlue">
        <Button x:Name="btnMember" Content="Member Managerment" HorizontalAlignment="Left" Margin="122,218,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.122,-0.579" Height="62" Width="144" Click="btnMember_Click"/>
        <Button x:Name="btnOrder" Content="Order Managerment" HorizontalAlignment="Center" Margin="0,218,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.122,-0.579" Height="62" Width="144" Click="btnOrder_Click"/>
        <Button x:Name="btnProduct" Content="Product Managerment" HorizontalAlignment="Left" Margin="530,218,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.122,-0.579" Height="62" Width="146" Click="btnProduct_Click"/>
        <Label x:Name="lbWelcome" Content="Welcome to Sale Manegement App" HorizontalAlignment="Center" Margin="0,113,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
    </Grid>
</Window>
